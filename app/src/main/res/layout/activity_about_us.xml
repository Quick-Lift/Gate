<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:layout_margin="5dp"
    tools:context="com.quicklift.AboutUs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="A simple and Desi Solution to Peak Time Pricing..."
            android:textSize="16sp"
            android:gravity="center_vertical"
            android:padding="5dp"
            android:textStyle="italic"
            android:textColor="#000000"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/blue_margin"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="City Cab"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textColor="#05affc"/>

            <View
                android:layout_width="90dp"
                android:layout_height="1dp"
                android:background="#05affc"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QuickLift city cab service offers a convenient ride for yourself or you with your family and friends. Using QuickLift city cab you can go anywhere, with anyone, more comfortably, without worrying about finding places to park."
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/blue_margin"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Outstation"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textColor="#05affc"/>

            <View
                android:layout_width="110dp"
                android:layout_height="1dp"
                android:background="#05affc"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Book QuickLift Bhraman cabs to travel outside of city on Rent basis. Its cheapest service for your last minute plan. Don't worry about the pain of long distance driving. Just enjoy the ride with QuickLift cab's Bhraman service. Bring the outer world closer to you."
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/blue_margin"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="E-Rickshaw"
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:fontFamily="serif-monospace"
                android:textStyle="bold"
                android:textColor="#05affc"/>

            <View
                android:layout_width="110dp"
                android:layout_height="1dp"
                android:background="#05affc"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QuickLift offers you E-Rickshaw which is battery-operated vehicles, so no smokes hence non polluting vehicles. These vehicles do not make much sounds, so no noise pollution as well. Here pay less for your travel and contribute more to the Environment and save the society for future generations."
                android:textSize="16sp"
                android:gravity="center_vertical"
                android:padding="5dp"
                android:textColor="#000000"
                android:layout_marginBottom="5dp"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
