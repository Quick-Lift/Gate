<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:fitsSystemWindows="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_support"
    tools:context="com.quicklift.Support">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#05affc"
            android:text="Contact Us -"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingLeft="20dp"
            android:paddingBottom="2dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#05affc"
            android:text=""
            android:textSize="18sp"
            android:paddingBottom="2dp"
            android:paddingLeft="20dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#05affc"
            android:layout_marginTop="30dp"
            android:text="Frequently Asked Questions"
            android:textSize="20sp"
            android:onClick="faq"
            android:gravity="left|center_vertical"
            android:paddingLeft="40dp"
            android:background="@drawable/margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#05affc"
            android:text="Fares and Charges"
            android:textSize="20sp"
            android:onClick="faresandcharges"
            android:gravity="left|center_vertical"
            android:paddingLeft="40dp"
            android:background="@drawable/margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#05affc"
            android:text="Ride Options"
            android:textSize="20sp"
            android:onClick="rideoptions"
            android:gravity="left|center_vertical"
            android:paddingLeft="40dp"
            android:background="@drawable/margin"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColor="#05affc"
            android:text="About Us"
            android:textSize="20sp"
            android:onClick="about"
            android:gravity="left|center_vertical"
            android:paddingLeft="40dp"
            android:background="@drawable/margin"/>
    </LinearLayout>
</ScrollView>