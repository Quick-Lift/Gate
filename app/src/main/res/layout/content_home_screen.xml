<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:CardView="http://schemas.android.com/apk/res-auto"
    tools:context=".HomeScreen">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--start of map fragment-->
        <fragment xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/map"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" />
        <!--end of map fragment-->
        <FrameLayout
            android:id="@+id/rating_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:background="#FF0298db">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                CardView:cardBackgroundColor="@color/frame_background">
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fare_main"
                    android:columnCount="2"
                    android:rowCount="2"
                    android:background="@android:color/transparent">
                    <android.support.v7.widget.CardView
                        android:layout_row="0"
                        android:layout_column="0"
                        CardView:cardBackgroundColor="@android:color/transparent"
                        CardView:cardElevation="0dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:background="@android:color/transparent">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rate your Last ride"
                                android:paddingLeft="10dp"
                                android:background="@android:color/transparent"/>
                            <TextView
                                android:id="@+id/text_timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="on saturday"
                                android:paddingLeft="10dp"
                                android:background="@android:color/transparent"/>
                        </LinearLayout>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_row="0"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        CardView:cardElevation="0dp"
                        CardView:cardBackgroundColor="@android:color/transparent">
                        <ImageView
                            android:layout_width="90sp"
                            android:layout_height="70sp"
                            android:src="@drawable/home"
                            android:background="@android:color/transparent"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_row="1"
                        android:layout_column="0"
                        CardView:cardElevation="0dp"
                        CardView:cardBackgroundColor="@android:color/transparent">
                        <RatingBar
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:theme="@style/RatingBar"
                            android:background="@android:color/transparent"/>
                    </android.support.v7.widget.CardView>
                    <android.support.v7.widget.CardView
                        android:layout_row="1"
                        android:layout_column="1"
                        android:layout_gravity="center"
                        CardView:cardElevation="0dp"
                        CardView:cardBackgroundColor="@android:color/transparent">
                        <TextView
                            android:id="@+id/text_name"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginEnd="5dp"
                            android:text="Shaid Khan"
                            android:background="@android:color/transparent"/>
                    </android.support.v7.widget.CardView>
                </GridLayout>
            </android.support.v7.widget.CardView>
        </FrameLayout>

        <!--start of vehicle list fragment-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/vehicles_list"
            android:layout_alignParentBottom="true">
            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:layout_marginBottom="60sp"
                android:id="@+id/fragmentTwo"
                android:background="@android:color/transparent">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent">
                    <Button
                        android:id="@+id/bike"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="Bike" />
                    <Button
                        android:id="@+id/car"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="Car" />
                    <Button
                        android:id="@+id/shareCar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/round_button"
                        android:text="Share Car" />
                    <Button
                        android:id="@+id/auto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auto"
                        android:background="@drawable/round_button"/>
                    <Button
                        android:id="@+id/shareAuto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share Auto"
                        android:background="@drawable/round_button"/>
                    <Button
                        android:id="@+id/rickshaw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E-Rickshaw"
                        android:background="@drawable/round_button"/>
                    <Button
                        android:id="@+id/shareRickshaw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Share E-Rickshaw"
                        android:background="@drawable/round_button"/>
                </LinearLayout>
            </HorizontalScrollView>
            <Button android:id="@+id/ride_button_main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Ride"
                android:textSize="20sp"
                android:background="@color/button_background"
                android:layout_gravity="bottom"
                android:layout_marginTop="10sp"/>
        </FrameLayout>
        <!--end of vehicle list view-->
        <!--start of button view-->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_alignParentBottom="true">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:id="@+id/fare_main"
                    android:text="Estimated Fare : $5"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:background="@color/button_background"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/confirm_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:background="@color/button_background"
                    android:layout_marginBottom="5sp"
                    android:textSize="20sp"/>

            </RelativeLayout>
        </FrameLayout>
        <!--source and destination view-->
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentTop="true"
            android:background="@color/button_background"
            android:layout_marginTop="60sp"
            android:id="@+id/location_card">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:color/transparent">
                <EditText
                    android:id="@+id/source_main"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:inputType="textPostalAddress"
                    android:background="#fdfefe"
                    android:paddingLeft="10dp"
                    android:hint="Source"/>
                <EditText
                    android:id="@+id/destination_main"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#fdfefe"
                    android:paddingLeft="10dp"
                    android:inputType="textPostalAddress"
                    android:hint="Destination"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/frame_background">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </android.support.v7.widget.CardView>
        </FrameLayout>
        <!--end of source and destination view-->
    </RelativeLayout>
</FrameLayout>
